@model Thryvo.Models.CreateLeaveAllocationVM

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Leave Types 
            </th>
        
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.LeaveTypes) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
      
            <td>
                <a class="btn btn-outline-info" asp-action="SetLeave" asp-route-id="@item.Id">
                    <i class="fa fa-pencil"></i> Allocate To Employees
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
