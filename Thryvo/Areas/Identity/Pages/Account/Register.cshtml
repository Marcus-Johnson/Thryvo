@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}


<center>
<div class="row" style="height: 45%; width: 30%;">
    <div class="col-md">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label style="font-size: 18px;" asp-for="Input.Username"></label>
                <input style="border-radius: 3px; font-size: 17px;" asp-for="Input.Username" class="form-control" />
                <span asp-validation-for="Input.Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label style="font-size: 18px;" asp-for="Input.FirstName"></label>
                <input style="border-radius: 3px; font-size: 17px;" asp-for="Input.FirstName" class="form-control" />
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label style="font-size: 18px;" asp-for="Input.LastName"></label>
                <input style="border-radius: 3px; font-size: 17px;" asp-for="Input.LastName" class="form-control" />
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label style="font-size: 18px;" asp-for="Input.Email"></label>
                <input style="border-radius: 3px; font-size: 17px;" asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label style="font-size: 18px;" asp-for="Input.Password"></label>
                <input style="border-radius: 3px; font-size: 17px;" asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label style="font-size: 18px;" asp-for="Input.ConfirmPassword"></label>
                <input style="border-radius: 3px; font-size: 17px;" asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary btn-block">Register</button>
            <a asp-area="Identity" asp-page="/Account/Login" style="font-size: 15px;"><h4>Already have an account?</h4></a>
        </form>
        
    </div>
</div>
</center>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
